CREATE TABLE note (
  id TEXT NOT NULL PRIMARY KEY,
  key TEXT UNIQUE,
  title TEXT,
  content TEXT
);

CREATE INDEX note_title_content ON note(id, key, title, content);

read:
SELECT *
FROM note
WHERE key = ?;

getAll:
SELECT *
FROM note;

create:
INSERT INTO note(id, key, title, content)
VALUES (?, ?, ?, ?);

write:
INSERT OR REPLACE INTO note VALUES ?;

delete:
DELETE FROM note
WHERE key = ?;

clear:
DELETE FROM note;